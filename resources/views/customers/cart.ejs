<section class="cart py-16">
    <!-- order summary conatiner -->
    <% if(session.cart) { %>
    <div class="order conatainer mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h>
        </div>

        <!-- wrapper for pizza list -->
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
               <img class="w-24"src="/img/<%= pizza.item.image %>"  alt="">
               <!-- here flex-1 takes all avialable space so  the both div will take 50 50 space -->
            <div class="flex-1 ml-4">
                <h1><%= pizza.item.name %></h1>
                <span><%= pizza.item.size %></span>
            </div>
            <span class="flex-1"><%= pizza.qty %></span>
            <span class="font-bold text-lg">Rs<%= pizza.item.price*pizza.qty %></span>
        </div>
        <% }%>


        </div>
        <hr>

        <div class="text-right py-4">
            <!-- div for total amount -->
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class=" amount text-2xl font-bold ml-2">Rs<%= session.cart.totalPrice %></span>
            </div>
            <!-- for address form -->
            <div>
                <!-- p-2 gives padding 2 from all side -->
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="phone number">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-2 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <!-- <a href="" class="inline-block cursor-pointer px-6 btn-primary py-2 rounded-full text-white font-bold mt-6">Login to continue</a> -->
        </div>
    </div>
    <% } else {%>

    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold py-8 mb-2">Your cart is empty </h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered any thing yet.<br>
                To order a pizza, go to the main page.
            </p>
            <!-- for image part in cart page -->
            <img class="w-2/5 mx-auto"src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-ful btn-primary text-white font-bold mt-12">Go back</a>     
        </div> 
     </div>
     <% } %>
</section>