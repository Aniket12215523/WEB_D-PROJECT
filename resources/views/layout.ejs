<!-- All repeating code of html part like navigation bar code, header part and footer -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/noty@3.1.4/lib/noty.css">
    <script src="https://cdn.jsdelivr.net/npm/noty@3.1.4/lib/noty.min.js" defer></script>
    <link rel="stylesheet" href="/css/app.css">


</head>
<body>
    <!-- Building navigation bar -->
    <!-- used classes of tailwin css in nav part -->
    <nav class="container mx-auto flex items-center justify-between py-4">
        <!-- Building left side of navigation part -->
        <div>
            <img src="/img/logo.png" alt="logo">
        </div>
        <!-- Building right side of navigation bar -->
        <div>
            <ul class="flex items-center">
                <!-- here used class ml-6 for margin left -->
                <li class="ml-6"><a href="#">Menu</a></li>
                <li class="ml-6"><a href="#">Offers</a></li>
                <li class="ml-6"><a href="/register">Register</a></li>
                <li class="ml-6"><a href="/login">Login</a></li>
                <!-- In tailwin css for horizontal padding we use px and for vertical padding we use py in inline block -->
                <li class="ml-6"><a href="/cart" class="inline-block px-3 py-2 rounded-full flex items-center">
                    <span id="cartCounter" class="text-white font-bold pr-2"><%= session.cart ? session.cart.totalQty : '' %></span>
                    <img src="/img/cart.png" alt="">
                </a></li>
            </ul>
        </div>
    </nav>
    <!-- for writing unique content -->
    <%- body  %> 
    <script src="/js/app.js"></script>

</body>
</html>